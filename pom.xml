<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>onjava8</groupId>
    <artifactId>OnJava8-Examples-Maven</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
        <modules>
            <module>onjava</module>
            <module>annotations</module>
            <module>arrays</module>
            <module>collections</module>
            <module>collectiontopics</module>
            <module>com</module>
            <module>compression</module>
            <module>concurrent</module>
            <module>control</module>
            <module>enums</module>
            <module>equalshashcode</module>
            <module>exceptions</module>
            <module>files</module>
            <module>functional</module>
            <module>generics</module>
            <module>hiding</module>
            <module>housekeeping</module>
            <module>innerclasses</module>
            <module>interfaces</module>
            <module>iostreams</module>
            <module>javadoc</module>
            <module>lowlevel</module>
            <module>newio</module>
            <module>objects</module>
            <module>operators</module>
            <module>patterns</module>
            <module>polymorphism</module>
            <module>references</module>
            <module>reuse</module>
            <module>serialization</module>
            <module>standardio</module>
            <module>staticchecking</module>
            <module>streams</module>
            <module>strings</module>
            <module>typeinfo</module>
            <module>validating</module>
        </modules>

    <dependencies>
        <dependency>
            <groupId>onjava8</groupId>
            <artifactId>onjava</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>21.0</version>
        </dependency>
    </dependencies>

    <properties>
        <java.version>1.8</java.version>
    </properties>


    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.openjdk.jmh</groupId>
                <artifactId>jmh-core</artifactId>
                <version>1.21</version>
            </dependency>
            <dependency>
                <groupId>org.openjdk.jmh</groupId>
                <artifactId>jmh-generator-reflection</artifactId>
                <version>1.21</version>
            </dependency>
            <dependency>
                <groupId>org.openjdk.jmh</groupId>
                <artifactId>jmh-generator-bytecode</artifactId>
                <version>1.21</version>
            </dependency>
            <dependency>
                <groupId>org.openjdk.jmh</groupId>
                <artifactId>jmh-generator-asm</artifactId>
                <version>1.21</version>
            </dependency>
            <dependency>
                <groupId>org.junit.jupiter</groupId>
                <artifactId>junit-jupiter-api</artifactId>
                <version>5.0.0-M2</version>
            </dependency>
            <dependency>
                <groupId>onjava8</groupId>
                <artifactId>onjava</artifactId>
                <version>1.0-SNAPSHOT</version>
            </dependency>

        </dependencies>
    </dependencyManagement>


    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>